---
export interface Dialogue {
  text: string;
  speaker: string;
  avatar: string;
  alignment: 'left' | 'right';
};

const props = Astro.props;
const dialogues = props.dialogues as Dialogue[];
---
<style>
  .dialogues-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .avatar-container {
    display: flex;
    align-items: center;
  }
  .left {
    display: flex;
    align-items: center;
  }
  .right {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }
  .avatar-container img {
    border-radius: 50%;
    width: 50px;
    height: 50px;
  }
  .left .avatar-container img {
    margin-right: 1rem;
  }
  .right .avatar-container img {
    margin-left: 1rem;
  }
  .text-container {
    background-color: rgba(200, 200, 200, 0.3);
    border-radius: 0.5rem;
    padding: 0.3rem;
  }
  .text-container p {
    margin: 0.3rem;
  }
</style>
<div class="dialogues-container">
  {dialogues.map((dialogue) => (
    <div class={`dialogue ${dialogue.alignment}`}>
      {dialogue.alignment === 'left'? (
        <>
          <div class="avatar-container">
            <img src={dialogue.avatar} title={dialogue.speaker} />
          </div>
          <div class="text-container">
            <p>{dialogue.text}</p>
          </div>
        </>
      ) : (
        <>
          <div class="text-container">
            <p>{dialogue.text}</p>
          </div>
          <div class="avatar-container">
            <img src={dialogue.avatar} title={dialogue.speaker} />
          </div>
        </>
      )}
    </div>
  ))}
</div>